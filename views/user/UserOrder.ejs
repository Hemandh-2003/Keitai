<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Orders</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    /* Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Arial', sans-serif;
      background-color: #f6f6f6;
      color: #333;
      line-height: 1.6;
    }

    header {
      background-color: #000;
      color: white;
      padding: 12px 16px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    header h1 {
      font-size: 18px;
      text-transform: uppercase;
      font-weight: bold;
    }

    /* Hamburger */
    .hamburger {
      display: none;
      font-size: 22px;
      cursor: pointer;
    }

    /* Sidebar */
    .sidebar {
      width: 220px;
      background-color: #f2f2f2;
      padding: 20px;
      display: flex;
      flex-direction: column;
      gap: 15px;
      box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
      position: fixed;
      top: 55px;
      left: 0;
      height: calc(100vh - 55px);
      overflow-y: auto;
      transition: transform 0.3s ease-in-out;
    }

    .sidebar a {
      display: flex;
      align-items: center;
      gap: 10px;
      color: #333;
      text-decoration: none;
      font-size: 15px;
      padding: 8px 10px;
      border-radius: 5px;
      transition: background 0.3s;
    }

    .sidebar a:hover,
    .sidebar a.active {
      background-color: #000;
      color: #fff;
    }

    /* Orders Section */
    .orders-section {
      margin-left: 240px;
      padding: 20px;
      max-width: 1000px;
    }

    .order-card {
      background-color: #fff;
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 20px;
    }

    .order-header {
      display: flex;
      justify-content: space-between;
      font-size: 14px;
      margin-bottom: 10px;
    }

    .order-info p {
      font-size: 14px;
      color: #555;
    }

    .view-details-btn {
      background-color: #000;
      color: white;
      padding: 8px 16px;
      border-radius: 5px;
      font-size: 14px;
      cursor: pointer;
      border: none;
    }

    .view-details-btn a {
      color: white;
      text-decoration: none;
    }

    .view-details-btn:hover {
      background-color: #444;
    }

    .no-orders {
      text-align: center;
      font-size: 18px;
      color: #555;
      padding: 20px;
    }

    /* Pagination */
    .pagination-container {
      display: flex;
      justify-content: center;
      margin-top: 30px;
    }

    .pagination {
      display: flex;
      gap: 10px;
    }

    .page-link {
      padding: 8px 12px;
      text-decoration: none;
      background-color: #f0f0f0;
      color: #333;
      border: 1px solid #ddd;
      border-radius: 4px;
    }

    .page-link.active {
      background-color: #007bff;
      color: white;
      border-color: #007bff;
    }

    .page-link:hover {
      background-color: #000;
      color: white;
    }

    /* Responsive Sidebar */
    @media (max-width: 768px) {
      .hamburger {
        display: block;
      }

      .sidebar {
        transform: translateX(-100%);
      }

      .sidebar.active {
        transform: translateX(0);
      }

      .orders-section {
        margin-left: 0;
        padding: 15px;
      }
    }
  </style>
</head>

<body>
  <!-- Header -->
  <header>
    <h1>Your Orders</h1>
    <i class="fas fa-bars hamburger" onclick="toggleSidebar()"></i>
  </header>

  <!-- Sidebar -->
  <aside class="sidebar" id="sidebar">
    <a href="/user/profile"><i class="fas fa-user"></i> Profile</a>
    <a href="/user/address"><i class="fas fa-map-marker-alt"></i> Your Address</a>
    <a href="/cart"><i class="fas fa-shopping-cart"></i> Your Cart</a>
    <a href="/user/orders" class="active"><i class="fas fa-box"></i> Your Orders</a>
    <a href="/wishlist"><i class="fas fa-heart"></i> Wishlist</a>
    <a href="/user/wallet"><i class="fas fa-wallet"></i> Wallet</a>
    <a href="/user/settings"><i class="fas fa-cog"></i> Settings</a>
    <a href="/logout" id="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</a>
  </aside>

  <!-- Orders Section -->
  <section class="orders-section">
    <% if (orders.length===0) { %>
      <p class="no-orders">No orders found.</p>
      <% } else { %>
        <% orders.forEach(order=> { %>
          <article class="order-card">
            <div class="order-header">
              <div class="order-id">Order #<%= order.orderId %>
              </div>
              <span class="order-status">
                <% if (order.returnStatus && ['Requested','Approved','Rejected'].includes(order.returnStatus)) { %>
                  Return <%= order.returnStatus %>
                    <% } else { %>
                      <%= order.status %>
                        <% } %>
              </span>
              <span class="order-date">
                <%= new Date(order.createdAt).toLocaleDateString() %>
              </span>
            </div>
            <div class="order-products">
              <% order.products.forEach(item=> { %>
                <div class="order-product">
                  <p><strong>Product:</strong>
                    <%= item.product.name %> (<%= item.quantity %>)
                  </p>
                </div>
                <% }) %>
            </div>
            <div class="order-info">
              <p><strong>Total Amount:</strong> â‚¹<%= new Intl.NumberFormat('en-IN').format(order.totalAmount.toFixed(2))
                  %>
              </p>
            </div>
            <footer>
              <% if (order.status==='Payment Failed' ) { %>
                <form action="/user/retry-payment" method="POST" style="display:inline;">
                  <input type="hidden" name="orderId" value="<%= order._id %>">
                  <button type="submit" class="btn btn-warning">
                    <i class="fas fa-sync-alt"></i> Retry Payment
                  </button>
                </form>




                <% } else { %>
                  <button class="view-details-btn">
                    <a href="/user/order/<%= order._id %>">View Details</a>
                  </button>
                  <% } %>
            </footer>
          </article>
          <% }) %>
            <% } %>
              <div class="pagination-container">
                <div class="pagination">
                  <% if (currentPage> 1) { %>
                    <a href="/user/orders?page=<%= currentPage - 1 %>&sortBy=<%= sortBy %>"
                      class="page-link">Previous</a>
                    <% } %>

                      <% for (let i=1; i <=totalPages; i++) { %>
                        <a href="/user/orders?page=<%= i %>&sortBy=<%= sortBy %>"
                          class="page-link <%= i === currentPage ? 'active' : '' %>">
                          <%= i %>
                        </a>
                        <% } %>

                          <% if (currentPage < totalPages) { %>
                            <a href="/user/orders?page=<%= currentPage + 1 %>&sortBy=<%= sortBy %>"
                              class="page-link">Next</a>
                            <% } %>
                </div>
              </div>
  </section>

  <!-- JS -->
  <script>
    function toggleSidebar() {
      document.getElementById("sidebar").classList.toggle("active");
    }

    document.getElementById("logout-btn").addEventListener("click", function (e) {
      e.preventDefault();
      Swal.fire({
        title: "Are you sure?",
        text: "Do you really want to logout?",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#d33",
        cancelButtonColor: "#3085d6",
        confirmButtonText: "Yes, Logout",
        cancelButtonText: "Cancel"
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = "/logout";
        }
      });
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>

</html>