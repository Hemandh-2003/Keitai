<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Your Cart</title>
  <link rel="stylesheet" href="/css/search.css" />
  <link rel="stylesheet" href="/css/cart.css" />
  <link rel="icon" href="/images/favicon.jpg" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>

  <header>
    <nav class="navbar">
      <div class="logo">
        <a href="/"><img src="/images/logo1.png" alt="Keitai Logo" /></a>
      </div>
      <ul class="nav-links">
        <li><a href="/home">Store</a></li>
        <li><a href="/laptop">Laptop</a></li>
        <li><a href="/tablet">Tablet</a></li>
        <li><a href="/phone">Phone</a></li>
        <li><a href="/watch">Watch</a></li>
        <li><a href="/earpods">EarPods</a></li>
        <li><a href="/accessories">Accessories</a></li>
      </ul>
      <div class="nav-icons">
        <div class="search-container">
          <input type="text" id="search-input" placeholder="Search for products..." />
          <i class="fas fa-search"></i>
          <div id="search-results"></div>
        </div>
        <a href="/user/profile"><i class="fas fa-user" aria-label="Profile"></i></a>
      </div>
    </nav>
  </header>

  <% let subtotal=0; let hasBlockedProduct=false; let blockedProductNames=[]; %>

    <div class="cart-wrapper">
      <% if (cart && cart.items.length> 0) { %>

        <div class="cart-items">
          <h1>Your Cart</h1>

          <% cart.items.forEach(item=> {
            const product = item.product;
            const isBlocked = product.isBlocked;
            const original = product.regularPrice;
            const final = product.offerPrice || product.salesPrice || original;
            const discount = Math.round(((original - final) / original) * 100);

            if (!isBlocked) {
            subtotal += final * item.quantity;
            } else {
            hasBlockedProduct = true;
            blockedProductNames.push(product.name);
            }
            %>

            <div class="cart-item <%= product.isBlocked ? 'blocked-product' : '' %>">
              <img src="/uploads/<%= product.images[0] %>" alt="<%= product.name %>" />
              <div class="item-details">
                <p class="item-title">
                  <%= product.name %>
                    <% if (product.isBlocked) { %>
                      <span style="color: red; font-weight: bold;">(Currently Unavailable)</span>
                      <% } %>
                </p>

                <p
                  class="item-stock <%= product.quantity === 0 ? 'out-of-stock' : (product.quantity <= 5 ? 'low-stock' : 'in-stock') %>">
                  <% if (product.quantity> 0) { %>
                    <%= product.quantity===1 ? 'Only 1 left!' : product.quantity + ' available' %>
                      <% } else { %>
                        Out of Stock
                        <% } %>
                </p>

                <p class="item-price"><strong>₹<%= final %></strong></p>
                <% if (discount> 0) { %>
                  <p class="original-price"><del>₹<%= original %></del></p>
                  <p class="discount-percent">
                    <%= discount %>% OFF
                  </p>
                  <% } %>
              </div>

              <div class="item-actions">
                <form class="item-actions-form" data-product-id="<%= product._id %>">
                  <input type="hidden" name="productId" value="<%= product._id %>">
                  <div class="quantity-controls">
                    <button type="button" class="quantity-btn decrease-btn" <%=product.quantity===0 ? 'disabled' : ''
                      %>>-</button>
                    <input type="text" name="quantity" value="<%= item.quantity %>" min="1"
                      max="<%= product.quantity %>" class="quantity-input" <%=product.quantity===0 ? 'disabled' : '' %>
                    />
                    <button type="button" class="quantity-btn increase-btn" <%=product.quantity===0 ? 'disabled' : ''
                      %>>+</button>
                  </div>
                  <button type="button" class="delete-btn" onclick="removeItem('<%= product._id %>')">Delete</button>
                  <button type="button" class="buy-btn" <%=product.quantity===0 || product.isBlocked ? 'disabled' : ''
                    %> onclick="buyNow('<%= product._id %>', <%= item.quantity %>)">Buy Now</button>
                </form>
              </div>
            </div>
            <% }); %>

              <% if (cart.items.length> 0 && totalPages > 1) { %>
                <div class="pagination">
                  <% if (currentPage> 1) { %>
                    <a href="/cart?page=<%= currentPage - 1 %>" class="page-link">Previous</a>
                    <% } %>

                      <% for (let i=1; i <=totalPages; i++) { %>
                        <% if (i===currentPage) { %>
                          <span class="page-link current">
                            <%= i %>
                          </span>
                          <% } else { %>
                            <a href="/cart?page=<%= i %>" class="page-link">
                              <%= i %>
                            </a>
                            <% } %>
                              <% } %>

                                <% if (currentPage < totalPages) { %>
                                  <a href="/cart?page=<%= currentPage + 1 %>" class="page-link">Next</a>
                                  <% } %>
                </div>
                <% } %>
        </div>

        <!-- Summary Section -->
        <div class="cart-summary-section">
          <div class="summary-box">
            <h2>Order Summary</h2>

            <% cart.items.forEach(item=> {
              const product = item.product;
              const final = product.offerPrice || product.salesPrice || product.regularPrice;
              if (!product.isBlocked) { %>
              <div class="summary-item">
                <span>
                  <%= product.name %>
                </span>
                <span>₹<%= final %> × <%= item.quantity %> = ₹<%= final * item.quantity %></span>
              </div>
              <% } }); %>

                <div class="summary-subtotal">
                  <strong>Subtotal: ₹<%= subtotal %></strong>
                </div>

                <form id="checkout-form" action="/user/checkout" method="POST">
                  <% cart.items.forEach(item=> {
                    if (item.product && item.product.quantity > 0 && !item.product.isBlocked) { %>
                    <input type="hidden" name="productIds[]" value="<%= item.product._id %>">
                    <input type="hidden" name="quantities[]" value="<%= item.quantity %>">
                    <% } }); %>

                      <button type="submit"
                        class="proceed-button <%= (hasBlockedProduct || subtotal > 450000) ? 'disabled-btn' : '' %>"
                        <%=(hasBlockedProduct || subtotal> 450000) ? 'disabled="disabled"' : '' %>>
                        Proceed to Buy
                      </button>


                </form>
          </div>
        </div>

        <% } else { %>
          <p class="empty-cart">Your cart is empty</p>
          <% } %>
    </div>

    <!-- SweetAlert for validation -->
    <script>
  <% if (hasBlockedProduct) { %>
        Swal.fire({
          icon: 'warning',
          title: 'Unavailable Products in Cart',
          text: 'Please remove unavailable items before checkout.',
          confirmButtonColor: '#3085d6'
        });
  <% } %>

  <% if (subtotal > 450000) { %>
        Swal.fire({
          icon: 'error',
          title: 'Purchase Limit Exceeded',
          text: 'Your cart total exceeds ₹4.5 lakhs. Please remove some items or reduce quantity.',
          confirmButtonColor: '#d33'
        });
  <% } %>
    </script>

    <script src="/js/search.js"></script>
    <script src="/js/cart.js"></script>
</body>

</html>