<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Order Details</title>
  <link rel="stylesheet" href="/css/order-details.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <style>
    .product-img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 8px;
      margin-bottom: 8px;
    }

    .cancel-btn,
    .return-btn {
      padding: 10px 20px;
      border: none;
      cursor: pointer;
      border-radius: 5px;
      margin-top: 10px;
    }

    .cancel-btn {
      background-color: #f44336;
      color: white;
    }

    .return-btn {
      background-color: #2196F3;
      color: white;
    }

    .coupon-details {
      background-color: #f1f1f1;
      padding: 12px 15px;
      border-left: 4px solid #28a745;
      margin-bottom: 20px;
      border-radius: 5px;
    }
  </style>
</head>

<body>
  <header>
    <nav>
      <a href="javascript:void(0);" class="back-link" onclick="goBack()">
        <i class="fas fa-arrow-left"></i> Back to Orders
      </a>
    </nav>
    <h1>Order Details</h1>
  </header>

  <section class="order-details-section">
    <div class="order-summary">
      <p><strong>Order ID:</strong>
        <%= order.orderId %>
      </p>
      <p><strong>Status:</strong>
        <% if (order.returnStatus==='Approved' ) { %>Return Accepted
          <% } else if (order.returnStatus==='Rejected' ) { %>Return Rejected
            <% } else if (order.returnStatus==='Requested' ) { %>Return Requested
              <% } else { %>
                <%= order.status %>
                  <% } %>
      </p>
      <p><strong>Order Date:</strong>
        <%= new Date(order.createdAt).toLocaleDateString() %>
      </p>
      <p><strong>Estimated Delivery:</strong>
        <%= new Date(order.estimatedDelivery).toLocaleDateString() %>
      </p>
    </div>

    <h3>Products</h3>
    <ul class="product-list">
      <% order.products.forEach(item=> {
        const price = item.product.salesPrice || item.product.regularPrice;
        const subtotal = price * item.quantity;
        %>
        <li class="product-item">
          <% if (item.product.images && item.product.images.length> 0) { %>
            <img src="/uploads/<%= item.product.images[0] %>" alt="Product" class="product-img">
            <% } %>
              <p><strong>Product Name:</strong>
                <%= item.product.name %>
              </p>
              <p><strong>Quantity:</strong>
                <%= item.quantity %>
              </p>
              <p><strong>Price:</strong> ₹<%= price %>
              </p>
              <p><strong>Subtotal:</strong> ₹<%= subtotal %>
              </p>

              <% if (order.status==='Pending' ) { %>
                <form action="/user/orders/cancel-item/<%= order._id %>" method="POST">
                  <input type="hidden" name="productId" value="<%= item.product._id %>">
                  <button type="submit" class="cancel-btn">Cancel This Item</button>
                </form>
                <% } else if (order.status==='Delivered' ) { %>
                  <form action="/user/orders/<%= order._id %>/return/<%= item.product._id %>" method="POST">
                    <input type="hidden" name="quantity" value="<%= item.quantity %>">
                    <input type="hidden" name="reason" value="User initiated return">
                    <button type="submit" class="return-btn">Return This Item</button>
                  </form>
                  <% } %>
        </li>
        <% }); %>
    </ul>

    <h3>Shipping Address</h3>
    <div class="shipping-address">
      <p>
        <%= selectedAddress?.name || 'N/A' %>
      </p>
      <p>
        <%= selectedAddress?.street || 'N/A' %>, <%= selectedAddress?.city || 'N/A' %>
      </p>
      <p>
        <%= selectedAddress?.state || 'N/A' %>, <%= selectedAddress?.zip || 'N/A' %>, <%= selectedAddress?.country
              || 'N/A' %>
      </p>
      <p><strong>Phone:</strong>
        <%= selectedAddress?.phone || 'N/A' %>
      </p>
    </div>

    <h3>Payment Method</h3>
    <p>
      <%= order.paymentMethod %>
    </p>

    <% if (order.coupon) { %>
      <h3>Coupon Applied</h3>
      <div class="coupon-details">
        <p><strong>Code:</strong>
          <%= order.coupon.code %>
        </p>
        <p><strong>Type:</strong>
          <%= order.coupon.discountType==='percentage' ? 'Percentage' : 'Fixed Amount' %>
        </p>
        <p><strong>Discount:</strong>
          <%= order.coupon.discountType==='percentage' ? `${order.coupon.discount}%` : `₹${order.coupon.discount}` %>
        </p>
        <p><strong>Discount Applied:</strong> ₹<%= order.couponDiscount?.toFixed(2) || 0 %>
        </p>
      </div>
      <% } %>

        <% const subTotal=order.totalAmount + (order.couponDiscount || 0); %>
          <p><strong>Subtotal:</strong> ₹<%= subTotal.toFixed(2) %>
          </p>

          <% if (order.deliveryCharge && order.deliveryCharge> 0) { %>
            <p><strong>Delivery Charge:</strong> ₹<%= order.deliveryCharge.toFixed(2) %>
            </p>
            <% } %>

              <% if (order.couponDiscount> 0) { %>
                <p><strong>Coupon Discount:</strong> -₹<%= order.couponDiscount.toFixed(2) %>
                </p>
                <% } %>

                  <p><strong>Total Amount:</strong> ₹<%= order.totalAmount.toFixed(2) %>
                  </p>
                  <form action="/user/order/<%= order._id %>/invoice" method="GET" target="_blank">
                    <button type="submit" class="btn btn-primary">
                      <i class="fas fa-file-invoice"></i> Download Invoice
                    </button>
                  </form>

                  <% if (order.status==='Pending' ) { %>
                    <form action="/user/orders/cancel/<%= order._id %>" method="POST"
                      onsubmit="return confirm('Are you sure you want to cancel this order?');">
                      <button type="submit" class="cancel-btn">Cancel Order</button>
                    </form>
                    <% } else if (order.status==='Delivered' ) { %>
                      <form class="return-order-form" action="/user/orders/return/<%= order._id %>" method="POST">
                        <button type="submit" class="return-btn">Return Order</button>
                      </form>
                      <% } %>
  </section>

  <script>
    function goBack() {
      if (document.referrer) {
        window.history.back();
      } else {
        window.location.href = '/user/orders';
      }
    }

    document.querySelectorAll('.return-order-form').forEach(form => {
      form.addEventListener('submit', function (e) {
        e.preventDefault();
        Swal.fire({
          title: 'Are you sure?',
          text: 'Do you want to return this order?',
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes, return it!',
          cancelButtonText: 'Cancel'
        }).then((result) => {
          if (result.isConfirmed) {
            form.submit();
          }
        });
      });
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>

</html>