<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Confirmation | Keitai</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    /* Keep all your existing CSS styles */
    :root {
      --primary: #2563eb;
      --primary-hover: #1d4ed8;
      --success: #22c55e;
      --success-hover: #16a34a;
      --danger: #ef4444;
      --danger-hover: #dc2626;
      --warning: #facc15;
      --text: #1e293b;
      --text-light: #6b7280;
      --bg-light: #f9fafb;
      --border: #e5e7eb;
      --shadow: rgba(0, 0, 0, 0.05);
    }
    /* ... keep all your existing CSS ... */
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="logo">
      <a href="/"><img src="/images/logo1.png" alt="Keitai Logo" /></a>
    </div>
  </nav>
  
  <div class="secure-banner">
    <i class="fas fa-lock"></i> Secure Order Confirmation - Your order is protected with 256-bit SSL encryption
  </div>

  <div class="order-confirmation-container">
    <header class="order-confirmation-header">
      <h1><i class="fas fa-check-circle"></i> Order Confirmation</h1>
      <div class="order-status">
        <i class="fas fa-clock"></i> Processing Your Order
      </div>
    </header>

    <main>
      <% if (paymentMethod === 'Online') { %>
        <div class="payment-processing">
          <h2><i class="fas fa-spinner"></i> Payment Processing Complete</h2>
          <div class="spinner"></div>
          <p>Your payment has been successfully processed!</p>
          <p>Redirecting to order confirmation...</p>
        </div>
        
        <!-- Auto-redirect to confirm-payment -->
        <script>
          setTimeout(() => {
            window.location.href = '/user/confirm-payment';
          }, 2000);
        </script>
        
      <% } else { %>
        <!-- Show normal order details for COD/Wallet -->
        <section class="section order-summary">
          <h2><i class="fas fa-shopping-bag"></i> Order Summary</h2>
          <div class="order-items">
            <% orderItems.forEach((item)=> { %>
              <div class="order-item">
                <div class="item-details">
                  <p class="item-name"><strong><%= item.product.name %></strong></p>
                  <p class="item-quantity">Quantity: <%= item.quantity %></p>
                </div>
                <div class="item-price">
                  ₹<%= item.offerPrice * item.quantity %>
                  <% if (item.product.regularPrice> item.offerPrice) { %>
                    <span class="original-price">₹<%= (item.product.regularPrice * item.quantity) %></span>
                  <% } %>
                </div>
              </div>
            <% }); %>
          </div>
          <div class="summary-total">
            <p class="delivery-charge">Delivery Charge: ₹<%= deliveryCharge %></p>
            <% if (typeof couponDiscount !=='undefined' && couponDiscount> 0) { %>
              <p class="discount-line">Coupon Discount: - ₹<%= couponDiscount %></p>
            <% } %>
            <p class="total-amount"><strong>Total Amount: ₹<%= totalAmount %></strong></p>
          </div>
        </section>

        <!-- Other sections... -->
        <section class="section confirm-order">
          <form action="/user/confirm-payment" method="POST" id="checkoutForm">
            <% orderItems.forEach((item)=> { %>
              <input type="hidden" name="productIds[]" value="<%= item.product._id %>">
              <input type="hidden" name="quantities[]" value="<%= item.quantity %>">
              <input type="hidden" name="offerPrices[]" value="<%= item.offerPrice %>">
            <% }); %>
            <input type="hidden" name="selectedAddress" value="<%= address._id %>">
            <input type="hidden" name="totalAmount" value="<%= totalAmount %>">
            <input type="hidden" name="paymentMethod" value="<%= paymentMethod %>">
            <button type="submit" class="place-order-btn" id="submitOrder">
              <i class="fas fa-check-circle"></i> Confirm & Place Order
            </button>
          </form>
        </section>
      <% } %>

      <div class="footer-links">
        <a href="/privacy-policy">Privacy Policy</a>
        <a href="/terms-of-service">Terms of Service</a>
        <a href="/refund-policy">Refund Policy</a>
        <a href="/contact">Contact Support</a>
      </div>
    </main>
  </div>

  <script>
    // Simple form submission handler for COD/Wallet
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('checkoutForm');
      const submitBtn = document.getElementById('submitOrder');
      
      if (form && submitBtn) {
        form.addEventListener('submit', function() {
          submitBtn.disabled = true;
          submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Placing Order...';
        });
      }
    });
  </script>
</body>
</html>