            <p>⭐⭐⭐⭐☆ (<%= Math.floor(Math.random() * 100) + 50 %> Reviews)</p>

            <!-- Updated Price Display Section -->
       <div class="price-container">
  <% 
  // Safely handle offerDetails with defaults
