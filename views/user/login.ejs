<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - Keitai</title>
  <link rel="icon" href="/images/faibcon.jpg">
  <link rel="stylesheet" href="/css/login.css">
</head>
<body>
  <div class="login-container">
    <header class="header">
        <a href="/" class="logo">
          <img src="/images/logo1.png" alt="Keitai Logo">
        </a>
      </header>

    <div class="login-box">
      <h1>Welcome to Keitai</h1>

      <!-- Display Error Message -->
      <% if (error) { %>
        <div class="error-message">
          <p style="color: red; font-weight: bold;"><%= error %></p>
        </div>
      <% } %>

      <form action="/login" method="POST" class="login-form">
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <div class="password-wrapper">
            <input type="password" id="password" name="password" required>
            <button type="button" class="toggle-password">üôà</button>
          </div>
        </div>
        <button type="submit" class="login-button">Log-in</button>
      </form>

      <div class="login-options">
        <a href="/user/forgot-password" class="forgot-password">Forgot Password?</a>
        <p>New to Keitai? <a href="/signup">Sign Up now</a></p>
        <p>Or</p>
        <div class="social-login">
            <a href="/auth/google" class="google">
              <img src="/images/google.png" alt="Google Login">
            </a>
            <!--a href="#" class="facebook">
              <img src="/images/facebook.png" alt="Facebook Login">
            </a-->
          </div>
      </div>
    </div>
  </div>
  <script>
    const togglePassword = document.querySelector('.toggle-password');
    const passwordField = document.querySelector('#password');
  
    togglePassword.addEventListener('click', () => {
      const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
      passwordField.setAttribute('type', type);
      togglePassword.textContent = type === 'password' ? 'üôà' : 'üëÅÔ∏è';
    });
  </script>
  
</body>
</html>
