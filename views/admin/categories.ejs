<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Manage Categories</title>
  <link rel="stylesheet" href="/css/category.css">
</head>

<body>
  <div class="dashboard-container">
    <nav class="sidebar">
      <div class="logo">
        <img src="/images/logo1.png" alt="Logo">
      </div>
      <ul>
        <li><a href="/admin/dashboard"><i class="icon-dashboard"></i> Dashboard</a></li>
        <li><a href="/admin/orders"><i class="icon-orders"></i> Orders</a></li>
        <li><a href="/admin/products"><i class="icon-products"></i> Products</a></li>
        <li><a href="/admin/users"><i class="icon-users"></i> Users</a></li>
        <li><a href="/admin/categories" class="active"><i class="icon-categories"></i> Categories</a></li>
        <li><a href="/admin/coupons"><i class="icon-coupons"></i> Coupons</a></li>
        <li><a href="/admin/banners"><i class="icon-banners"></i> Banners</a></li>
        <li><a href="/admin/payments"><i class="icon-payments"></i> Payments</a></li>
        <li><a href="/admin/offers"><i class="icon-offers"></i> Offers</a></li>
      </ul>
    </nav>
    <div class="container">
      <h1>Manage Categories</h1>

      <!-- Display Error Message -->
      <% if (error) { %>
        <div class="error-message">
          <p>
            <%= error %>
          </p>
        </div>
        <% } %>



          <!-- Add Category Form -->
         <div class="add-category">
  <h2>Add New Category</h2>
  <form action="/admin/add-category" method="POST" onsubmit="return validateCategoryForm()">
    <input type="text" name="name" id="categoryName" placeholder="Category Name" required pattern="[A-Za-z\s]{1,20}" title="Only letters allowed, up to 20 characters">
    <button type="submit">Add</button>
  </form>
</div>

          <!-- Categories Table -->
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% categories.forEach((category)=> { %>
                <tr>
                  <td>
                    <%= category.name %>
                  </td>
                  <td>
                    <a href="/admin/edit-category/<%= category._id %>">Edit</a> |
                    <a href="/admin/delete-category/<%= category._id %>">Delete</a>
                  </td>
                </tr>
                <% }); %>
            </tbody>
          </table>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function validateCategoryForm() {
    const nameInput = document.getElementById('categoryName');
    const value = nameInput.value.trim();

    if (!value) {
      Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: 'Category name cannot be empty.',
      });
      return false;
    }

    const regex = /^[A-Za-z\s]{1,20}$/;
    if (!regex.test(value)) {
      Swal.fire({
        icon: 'error',
        title: 'Invalid Input',
        text: 'Category name must contain only letters and up to 20 characters.',
      });
      return false;
    }

    return true;
  }
</script>

</body>

</html>