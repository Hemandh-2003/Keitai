<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/css/admin.css" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
  <div class="dashboard-container">
    <!-- Sidebar -->
    <nav class="sidebar">
      <div class="logo">
        <img src="/images/logo1.png" alt="Logo" />
      </div>
      <ul>
        <li><a href="/admin/dashboard" class="active">Dashboard</a></li>
        <li><a href="/admin/sales-report">Sales Report</a></li>
        <li><a href="/admin/orders">Orders</a></li>
        <li><a href="/admin/products">Products</a></li>
        <li><a href="/admin/users">Users</a></li>
        <li><a href="/admin/categories">Categories</a></li>
        <li><a href="/admin/coupons">Coupons</a></li>
        <li><a href="/admin/banners">Banners</a></li>
        <li><a href="/admin/payments">Payments</a></li>
        <li><a href="/admin/offers">Offers</a></li>
      </ul>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
      <header class="top-bar">
        <input type="text" placeholder="Search" />
        <div class="admin-controls">
          <span>Admin</span>
          <form action="/admin/logout" id="logout-btn" method="POST">
            <button type="submit" style="background: none; border: none; cursor: pointer; color: #fff;">Logout</button>
          </form>
        </div>
      </header>

      <!-- Filters -->
      <!-- Filters -->
      <section class="filters-section">
        <h3>Dashboard Filters</h3>
        <select id="range" onchange="toggleDateFields()">
          <option value="daily">Today</option>
          <option value="monthly" selected>This Month</option>
          <option value="yearly">This Year</option>
          <option value="custom">Custom</option>
        </select>

        <div id="custom-date-fields" style="display: none;">
          <input type="date" id="startDate" />
          <input type="date" id="endDate" />
        </div>

        <button onclick="applyFilter()">Apply Filter</button>
      </section>
      <!-- Stats Overview -->
      <section class="stats-section">
        <div class="stat-card">Total Sales <span id="totalSales">₹0</span></div>
        <div class="stat-card">Total Orders <span id="totalOrders">0</span></div>
      </section>

      <!-- Charts -->
      <section class="charts-section">
        <div class="sales-overview">
          <h3>Top 10 Selling Products</h3>
          <canvas id="productChart"></canvas>
        </div>
        <div class="visitors">
          <h3>Top Categories</h3>
          <canvas id="categoryChart"></canvas>
        </div>
      </section>
    </div>
  </div>

  <!-- JS Logic -->
  <script>
    let productChart, categoryChart;

    // Date input handling
    document.getElementById('startDate').addEventListener('change', function () {
      const startDate = this.value;
      const endDateInput = document.getElementById('endDate');

      // Set the minimum end date to be the same as start date
      endDateInput.min = startDate;

      // If current end date is before start date, reset it
      if (endDateInput.value && endDateInput.value < startDate) {
        endDateInput.value = startDate;
      }
    });

    async function loadDashboardStats(apiUrl = '/admin/api/dashboard-stats?range=monthly') {
      try {
        const res = await fetch(apiUrl);
        const data = await res.json();

        // Set values
        document.getElementById('totalSales').innerText = `₹${data.sales}`;
        document.getElementById('totalOrders').innerText = data.orderCount;

        // Destroy previous charts
        if (productChart) productChart.destroy();
        if (categoryChart) categoryChart.destroy();

        // Product Chart
        const productNames = data.topProducts.map(p => p.name);
        const productSales = data.topProducts.map(p => p.totalSold);
        const productCtx = document.getElementById('productChart').getContext('2d');
        productChart = new Chart(productCtx, {
          type: 'bar',
          data: {
            labels: productNames,
            datasets: [{
              label: 'Top Products (Qty Sold)',
              data: productSales,
              backgroundColor: 'rgba(255, 99, 132, 0.4)',
              borderColor: 'rgba(255, 99, 132, 1)',
              borderWidth: 1
            }]
          },
          options: {
            responsive: true,
            scales: { y: { beginAtZero: true } }
          }
        });

        // Category Chart
        const categoryNames = data.topCategories.map(c => c.name);
        const categoryCounts = data.topCategories.map(c => c.count);
        const categoryCtx = document.getElementById('categoryChart').getContext('2d');
        categoryChart = new Chart(categoryCtx, {
          type: 'bar',
          data: {
            labels: categoryNames,
            datasets: [{
              label: 'Top Categories (Products Count)',
              data: categoryCounts,
              backgroundColor: 'rgba(54, 162, 235, 0.4)',
              borderColor: 'rgba(54, 162, 235, 1)',
              borderWidth: 1
            }]
          },
          options: {
            responsive: true,
            scales: { y: { beginAtZero: true } }
          }
        });

      } catch (error) {
        console.error('Dashboard load error:', error);
      }
    }

    function applyFilter() {
      const range = document.getElementById('range').value;
      const start = document.getElementById('startDate').value;
      const end = document.getElementById('endDate').value;

      let url = `/admin/api/dashboard-stats?range=${range}`;
      if (range === 'custom') {
        if (!start || !end) return alert('Please select both dates!');
        if (end < start) return alert('End date cannot be before start date!');
        url += `&startDate=${start}&endDate=${end}`;
      }

      loadDashboardStats(url);
    }

    // Initial load
    loadDashboardStats();
  </script>
  <script>
    document.getElementById("logout-btn").addEventListener("click", function (e) {
      e.preventDefault(); // stop direct navigation

      Swal.fire({
        title: "Are You Logging Out?",
        text: "Then Have a Nice Day Mr.Aizen",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#d33",
        cancelButtonColor: "#3085d6",
        confirmButtonText: "Yes, Logout",
        cancelButtonText: "Cancel"
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = "/admin/adminlog"; // redirect only if confirmed
        }
      });
    });
  </script>
  <script>
  function toggleDateFields() {
    const range = document.getElementById('range').value;
    const customFields = document.getElementById('custom-date-fields');

    if (range === 'custom') {
      customFields.style.display = 'inline-block';
    } else {
      customFields.style.display = 'none';
    }
  }
  toggleDateFields();
</script>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>

</html>