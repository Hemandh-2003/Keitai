<html lang="en">

<head>
  <link rel="stylesheet" href="/css/Order.css">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Management</title>
</head>

<body>
  <div class="dashboard-container">
    <nav class="sidebar">
      <div class="logo">
        <img src="/images/logo1.png" alt="Logo">
      </div>
      <ul>
        <li><a href="/admin/dashboard">Dashboard</a></li>
        <li><a href="/admin/sales-report">Sales Report</a></li>
        <li><a href="/admin/orders" class="active">Orders</a></li>
        <li><a href="/admin/products">Products</a></li>
        <li><a href="/admin/users">Users</a></li>
        <li><a href="/admin/categories">Categories</a></li>
        <li><a href="/admin/coupons">Coupons</a></li>
        <li><a href="/admin/banners">Banners</a></li>
        <li><a href="/admin/payments">Payments</a></li>
        <li><a href="/admin/offers">Offers</a></li>
      </ul>
    </nav>
    <div class="orders-container">
      <div class="orders-header">
        <h1>Order Management</h1>
        <div class="sorting-container">
          <form method="GET" action="/admin/orders">
            <select name="sort" onchange="this.form.submit()" class="sort-select">
              <option value="new" <%=sort==='new' ? 'selected' : '' %>>Newest</option>
              <option value="old" <%=sort==='old' ? 'selected' : '' %>>Oldest</option>
              <option value="cancelled" <%=sort==='cancelled' ? 'selected' : '' %>>Cancelled (Admin)</option>
              <option value="user-cancelled" <%=sort==='user-cancelled' ? 'selected' : '' %>>Cancelled (User)</option>
              <option value="shipped" <%=sort==='shipped' ? 'selected' : '' %>>Shipped</option>
              <option value="delivered" <%=sort==='delivered' ? 'selected' : '' %>>Delivered</option>
              <option value="pending" <%=sort==='pending' ? 'selected' : '' %>>Pending</option>
              <option value="return-requested" <%=sort==='return-requested' ? 'selected' : '' %>>Return Requested
              </option>
            </select>
          </form>
        </div>
      </div>

      <% if (orders.length===0) { %>
        <div class="no-orders">
          <img src="/images/empty-box.svg" alt="No orders" class="empty-icon">
          <p>No orders found</p>
        </div>
        <% } else { %>
          <div class="orders-table-container">
            <table class="orders-table">
              <thead>
                <tr>
                  <th class="order-id-col">Order ID</th>
                  <th class="user-col">User</th>
                  <th class="status-col">Status</th>
                  <th class="payment-col">Payment</th>
                  <th class="price-col">Total</th>
                  <th class="products-col">Products</th>
                  <th class="actions-col">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% orders.forEach(order=> { %>
                  <tr>
                    <td class="order-id-cell">
                      <div class="order-id">#<%= order.orderId %>
                        <a href="/admin/orders/<%= order._id %>/payment">View</a>
                      </div>
                      <div class="order-date">
                        <%= new Date(order.createdAt).toLocaleDateString() %>
                      </div>
                    </td>
                    <td class="user-cell">
                      <div class="user-name">
                        <%= order.user ? order.user.name : 'Unknown User' %>
                      </div>
                      <% if (order.user && order.user.email) { %>
                        <div class="user-email">
                          <%= order.user.email %>
                        </div>
                        <% } %>
                    </td>
                   <td class="status-cell">
  <% 
    let displayStatus = order.status;
    let returnReason = '';
    let returnItems = [];
    
    if (order.returnedItems && order.returnedItems.length > 0) {
      returnReason = order.returnedItems[0].reason;
      returnItems = order.returnedItems;
    }
    
    if (order.returnStatus && order.returnStatus !== 'None') {
      displayStatus = `Return ${order.returnStatus}`;
    }
  %>
  
  <div class="status-badge <%= displayStatus.toLowerCase().replace(/\s+/g, '-') %>">
    <%= displayStatus %>
    <% if (returnReason) { %>
      <button class="view-reason-btn" 
              data-order-id="<%= order._id %>"
              data-reason="<%= returnReason %>"
              data-items='<%= JSON.stringify(returnItems) %>'>
        View Reason
      </button>
    <% } %>
  </div>

  <% if (order.returnStatus === 'Requested') { %>
    <div class="return-actions">
      <form action="/admin/orders/<%= order._id %>/return-status" method="POST">
        <input type="hidden" name="action" value="Approved">
        <button type="submit" class="action-btn approve-btn">Approve</button>
      </form>
      <form action="/admin/orders/<%= order._id %>/return-status" method="POST">
        <input type="hidden" name="action" value="Rejected">
        <button type="submit" class="action-btn reject-btn">Reject</button>
      </form>
    </div>
  <% } %>
</td>
                    <td class="payment-cell">
                      <div class="payment-method <%= order.paymentMethod.toLowerCase().replace(/\s+/g, '-') %>">
                        <%= order.paymentMethod %>
                      </div>
                    </td>
                    <td class="price-cell">
                      <div class="total-amount">â‚¹<%= order.totalAmount.toLocaleString('en-IN', { maximumFractionDigits:
                          2 }) %>
                      </div>
                    </td>
                    <td class="products-cell">
                      <div class="products-list">
                        <% order.products.forEach(item=> { %>
                          <div class="product-item">
                            <div class="product-name">
                              <%= item.product.name %>
                            </div>
                            <div class="product-details">
                              <span class="product-qty">Qty: <%= item.quantity %></span>
                              <span class="product-status 
  <%= (item.returnStatus && item.returnStatus !== 'None') 
        ? 'returned' 
        : item.status.toLowerCase() %>">

  <% if (item.returnStatus && item.returnStatus !== 'None') { %>
    Returned (<%= item.returnStatus %>)
  <% } else { %>
    <%= item.status %>
  <% } %>
</span>

                            </div>
                          </div>
                          <% }) %>
                      </div>
                    </td>
                    <td class="actions-cell">
                      <form action="/admin/orders/update-status/<%= order.orderId %>" method="POST" class="status-form">
                        <select name="status" class="status-select" <%=(order.status.includes('Cancelled')) ? 'disabled'
                          : '' %>>
                          <option value="Pending" <%=order.status==='Pending' ? 'selected' : '' %>>Pending</option>
                          <option value="Shipped" <%=order.status==='Shipped' ? 'selected' : '' %>>Shipped</option>
                          <option value="Delivered" <%=order.status==='Delivered' ? 'selected' : '' %>>Delivered
                          </option>
                          <option value="Cancelled" <%=order.status==='Cancelled' ? 'selected' : '' %>>Cancelled
                          </option>
                          <option value="User Cancelled" <%=order.status==='User Cancelled' ? 'selected' : '' %>>User
                            Cancelled</option>
                          <option value="Return Requested" <%=order.status==='Return Requested' ? 'selected' : '' %>
                            >Return Requested</option>
                        </select>
                        <button type="submit" class="action-btn update-btn" <%=(order.status.includes('Cancelled'))
                          ? 'disabled' : '' %>>Update</button>
                      </form>
                      <form action="/admin/orders/cancel/<%= order.orderId %>" method="POST" class="cancel-form">
                        <button type="submit" class="action-btn cancel-btn" <%=(order.status.includes('Cancelled'))
                          ? 'disabled' : '' %>>Cancel</button>
                      </form>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>

          <div class="pagination">
            <% if (currentPage> 1) { %>
              <a href="/admin/orders?sort=<%= sort %>&page=<%= currentPage - 1 %>" class="pagination-btn prev-btn">
                <i class="fas fa-chevron-left"></i> Previous
              </a>
              <% } %>
                <div class="page-info">
                  Page <%= currentPage %> of <%= totalPages %>
                </div>
                <% if (currentPage < totalPages) { %>
                  <a href="/admin/orders?sort=<%= sort %>&page=<%= currentPage + 1 %>" class="pagination-btn next-btn">
                    Next <i class="fas fa-chevron-right"></i>
                  </a>
                  <% } %>
          </div>
          <% } %>
    </div>
    <div id="returnReasonModal" class="modal">
  <div class="modal-content">
    <span class="close-modal">&times;</span>
    <h3>Return Details</h3>
    <div id="modalReturnReason"></div>
    <div id="modalReturnItems"></div>
  </div>
</div>

<script>
  // Modal functionality
  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('returnReasonModal');
    const closeBtn = document.querySelector('.close-modal');
    
    document.querySelectorAll('.view-reason-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const reason = this.dataset.reason;
        const items = JSON.parse(this.dataset.items);
        
        document.getElementById('modalReturnReason').innerHTML = 
          `<p><strong>Return Reason:</strong> ${reason || 'No reason provided'}</p>`;
        
        let itemsHtml = '<h4>Returned Items:</h4><ul>';
        items.forEach(item => {
          itemsHtml += `
            <li>
              ${item.product?.name || 'Unknown Product'} 
              (Qty: ${item.quantity})
              ${item.reason ? `<br><em>Reason: ${item.reason}</em>` : ''}
            </li>`;
        });
        itemsHtml += '</ul>';
        
        document.getElementById('modalReturnItems').innerHTML = itemsHtml;
        modal.style.display = 'block';
      });
    });

    closeBtn.addEventListener('click', function() {
      modal.style.display = 'none';
    });

    window.addEventListener('click', function(event) {
      if (event.target === modal) {
        modal.style.display = 'none';
      }
    });
  });
</script>
</div>
</body>

</html>